.setting {
  position: relative;
  height: 100vh;
  width: 100vw;
  background: url("http://gd-hbimg.huaban.com/4e1849fe321ff056f6566d70b1c90e1892154bb511c72-ILL0hJ_fw658");
  background-repeat: no-repeat;
  background-size: cover;
  background-attachment: fixed;
  background-position: center;
  overflow-x: hidden;
  overflow-y: scroll;
  outline: none;
  vertical-align: middle;
  display: table-cell;
  text-align: center;
}
.setting .mosare {
  width: 70px;
  height: 70px;
  background-color: rgba(0, 0, 0, 0);
  border-radius: 50%;
  position: absolute;
  -webkit-animation: mosare 0.25s forwards;
          animation: mosare 0.25s forwards;
}
.setting .mosare .mosare-img {
  margin-left: -24px;
  margin-top: -24px;
  height: 100%;
  width: 100%;
}
@-webkit-keyframes mosare {
0% {
    width: 50px;
    height: 50px;
    opacity: 0.2;
}
50% {
    width: 70px;
    height: 70px;
    opacity: 1;
}
99% {
    width: 50px;
    height: 50px;
    opacity: 0.5;
}
100% {
    width: 0;
    height: 0;
}
}
@keyframes mosare {
0% {
    width: 50px;
    height: 50px;
    opacity: 0.2;
}
50% {
    width: 70px;
    height: 70px;
    opacity: 1;
}
99% {
    width: 50px;
    height: 50px;
    opacity: 0.5;
}
100% {
    width: 0;
    height: 0;
}
}
.setting .rule-img {
  height: 200px;
  margin-top: 6px;
}
.setting .rule-info {
  margin-top: 10px;
  text-align: left;
  font-family: cursive;
  font-size: 20px;
  font-weight: 800;
}

